/**index.wxss**/
swiper{
  width: 100%;
  height: 340rpx;
}
swiper image {
  display: block;
  width: 100%;
  height: 100%
}

/*course-detail*/
.course-detail {
  margin: 50rpx 100rpx;
}
.course-title{
  font-size: 34rpx;
  font-weight: bold;
  color: green;
}
.course-desc{
  font-size: 24rpx;
}

/* items-list */
.items-list{ 
   margin-left: 80rpx;
   position: static;
   height: 350rpx;
}
.pro-item {
  display: flex;
  flex-direction: column;
  float:left;
  margin: 20rpx 0;
} 
.pro-item image {
  margin: 0 30rpx;
  width: 90rpx;
  height:90rpx;
}
.pro-item text {
  font-size: 30rpx;
  margin-left: 15rpx;
}

/*course-view*/
.course-view {
  margin: 20rpx 100rpx;
  height: 200rpx;
  border: solid #1AAD16;
}